@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row valign-wrapper animate__animated animate__fadeIn">
    <div class="col l4 s12 m6 offset-l4">
        <div class="card grey lighten-5">
            <div class="card-content white-text">
                <span class="card-title black-text">Reset Password</span>
                <p class="black-text">
                    If you have an account with us, we have sent you an email with the instructions to reset your password.
                </p>
            </div>
            <div class="card-action">
                <a class="blue-text" asp-area="Users" asp-controller="Account" asp-action="SignIn">Return to sign in</a>
            </div>
        </div>
    </div>
</div>